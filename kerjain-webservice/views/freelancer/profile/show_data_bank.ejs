<style>
  .input-disabled {
    background-color: #ffffff !important;
  }
</style>
<div
  class="tab-pane fade show active"
  id="personal"
  role="tabpanel"
  aria-labelledby="personal-tab"
>
  <!-- DataTales Example -->
  <div class="card mt-2 mb-4">
    <div class="card-body">
      <h4>Bank Profile</h4>
      <hr />
      <div class="form-group">
        <label for="inputBankName">Bank Name</label>
        <input
          type="text"
          class="form-control input-disabled"
          name="bankName"
          value="<%= freelancer.bankName %>"
          placeholder="Enter Bank Name"
          readonly
        />
      </div>
      <div class="form-group">
        <label for="inputbankAccount">Bank Account</label>
        <input
          type="text"
          class="form-control input-disabled"
          name="bankAccount"
          value="<%= freelancer.bankAccount %>"
          placeholder="Enter bank Account"
          readonly
        />
      </div>
      <div class="form-group">
        <label for="inputAccountHolder">Bank Account Holder</label>
        <input
          type="text"
          class="form-control input-disabled"
          name="accountHolder"
          value="<%= freelancer.accountHolder %>"
          placeholder="Enter Bank Name"
          readonly
        />
      </div>
    </div>
  </div>
</div>
