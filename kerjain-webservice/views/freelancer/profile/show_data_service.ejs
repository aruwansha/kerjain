<style>
  .input-disabled {
    background-color: #ffffff !important;
  }
</style>
<div
  class="tab-pane fade show active"
  id="personal"
  role="tabpanel"
  aria-labelledby="personal-tab"
>
  <!-- DataTales Example -->
  <div class="card mt-2 mb-4">
    <div class="card-body">
      <h4>Service Profile</h4>
      <hr />
      <div class="form-group">
        <label for="inputTitle">Service Title</label>
        <input
          type="text"
          class="form-control input-disabled"
          name="title"
          value="<%= freelancer.title %>"
          placeholder="Enter title"
          readonly
        />
      </div>
      <div class="form-group">
        <label for="inputDescription">Description</label>
        <input
          type="text"
          class="form-control input-disabled"
          name="description"
          value="<%= freelancer.description %>"
          placeholder="Enter description"
          readonly
        />
      </div>
      <div class="form-group">
        <label for="inputCategory">Category</label>
        <select
          name="categoryId"
          id="category"
          class="form-control input-disabled"
        >
          <option value="<%= freelancer.categoryId.name %>">
            <%= freelancer.categoryId.name %>
          </option>
        </select>
      </div>
      <div class="form-group">
        <label for="inputRating">Rating</label>
        <input
          type="number"
          class="form-control input-disabled"
          name="rating"
          value="<%= freelancer.rating %>"
          placeholder="Enter rating"
          readonly
        />
      </div>
    </div>
  </div>
</div>
