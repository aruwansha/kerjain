<%- include('../../partials/header.ejs') %>
<!-- Page Wrapper -->
<div id="wrapper">
  <!-- Sidebar -->
  <%- include('../../partials/freelancer/sidebar.ejs') %>
  <!-- End of Sidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <!-- Topbar -->
      <%- include('../../partials/navbar.ejs') %>
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800">Chat</h1>
        <%- include('../../partials/message.ejs') %>
        <!-- content row -->
        <div class="row">
          <div class="col">
            <div class="card">
              <div class="card-header"></div>
              <div class="card-body">
                <% for(i = 0; i < chats.length; i++){ %>
                <div class="form-group">
                  <div class="row">
                    <div class="col-md-10">
                      <label for="" class="text-primary font-weight-bold"
                        ><%= chats[i]._id %>
                      </label>
                    </div>
                    <div class="col-md-2 text-right">
                      <p>
                        <%= chats[i].time.toLocaleString('id-ID', 'hour') %>
                      </p>
                    </div>
                  </div>
                  <div class="row d-flex justify-content-between">
                    <div class="col-10">
                      <p><%= chats[i].message %></p>
                    </div>
                  </div>
                  <hr />
                </div>
                <% } %>
                <div class="row">
                  <div class="col-11 text-left">
                    <input type="text" class="form-control" name="chat" id="chat">
                  </div>
                  <div class="col-1 text-right">
                    <a href="/freelancer/chat/" class="btn btn-primary"
                      ><i class="fas fa-reply"></i
                    ></a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- end of content row -->
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    <%- include('../../partials/footer.ejs') %>
    <!-- End of Footer -->
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>

<%- include('../../partials/js.ejs') %>
