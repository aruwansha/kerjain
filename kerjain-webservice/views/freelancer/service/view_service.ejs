<%- include('../../partials/header.ejs') %>
<!-- Page Wrapper -->
<div id="wrapper">
  <!-- Sidebar -->
  <%- include('../../partials/freelancer/sidebar.ejs') %>
  <!-- End of Sidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <!-- Topbar -->
      <%- include('../../partials/navbar.ejs') %>
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800">List Jasa</h1>
        <!-- End of Heading -->

        <div class="row mb-4">
          <div class="col">
            <a href="#" class="btn btn-primary btn-sm">
              <span class="font-weight-bold text-xs text-uppercase"
                >Tambah</span
              >
            </a>
          </div>
        </div>

        <% for(i = 0; i < service.length; i++){ %>
        <div class="row">
          <div class="col-12 mb-3">
            <div class="card border-left-primary shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col-3 mr-2">
                    <img
                      src=""
                      alt=""
                      width="200"
                      height="112.50"
                      class="img-fluid"
                    />
                  </div>
                  <div class="col-6 mr-auto">
                    <div
                      class="text-l font-weight-bold text-primary text-uppercase mb-1"
                    >
                      <%= service[i].title %>
                    </div>
                    <div class="h6 mb-1 font-weight-bold text-gray-800">
                      <%= service[i].description %>
                    </div>
                    <div class="h6 mb-0">
                      <%= Intl.NumberFormat('id-ID', {style: 'currency',
                      currency: 'IDR'}).format(service[i].price) %>
                    </div>
                  </div>
                  <div class="col-auto">
                    <a
                      href=""
                      class="btn btn-warning btn-sm d-flex justify-content-end mb-2"
                      ><i class="fas fa-pencil-alt"></i
                    ></a>
                    <a
                      href=""
                      class="btn btn-danger btn-sm d-flex justify-content-end mb-0"
                      ><i class="fas fa-trash-alt"></i
                    ></a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    <%- include('../../partials/footer.ejs') %>
    <!-- End of Footer -->
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>
<%- include('../../partials/js.ejs') %>
