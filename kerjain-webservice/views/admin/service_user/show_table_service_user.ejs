<div class="card shadow mb-4">
  <div class="card-header py-3">
    <button
      type="button"
      class="btn btn-primary"
      data-toggle="modal"
      data-target="#addModal"
    >
      <i class="fa fa-plus"></i>
    </button>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered text-center"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>No</th>
            <th>Name</th>
            <th>Email</th>
            <th>Rating</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>

        <tbody>
          <% for(let i = 0; i < serviceUser.length; i++) { %>
          <tr>
            <td><%= i+1 %></td>
            <td><%= serviceUser[i].userId.name %></td>
            <td><%= serviceUser[i].userId.email %></td>
            <td><%= serviceUser[i].rating %></td>
            <td>
              <% if( serviceUser[i].isBanned == false) { %> Active <% } else{ %>
              Banned <% } %>
            </td>

            <td>
              <form
                action="/admin/serviceuser/<%= serviceUser[i]._id %>?_method=PUT"
                method="POST"
              >
                <a
                  href="/admin/serviceuser/<%= serviceUser[i]._id %>"
                  class="btn btn-warning btn-circle btn-sm"
                  ><i class="fas fa-edit"></i
                ></a>

                <% if( serviceUser[i].isBanned == false) { %>
                <button type="submit" class="btn btn-danger btn-circle btn-sm">
                  <i class="fas fa-lock"></i>
                </button>
                <% } else{ %>
                <button type="submit" class="btn btn-success btn-circle btn-sm">
                  <i class="fas fa-unlock-alt"></i>
                </button>
                <% } %>
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
