<style>
  .input-disabled {
    background-color: #ffffff !important;
  }
</style>
<div
  class="tab-pane fade show active"
  id="detail-freelancer"
  role="tabpanel"
  aria-labelledby="detail-tab"
>
  <!-- DataTales Example -->
  <div class="card mt-2 mb-4">
    <div class="card-body">
      <!-- Detail Form -->
      <h4>Basic Profile</h4>
      <hr />
      <div class="form-group">
        <label for="inputName">Nama</label>
        <input
          type="text"
          class="form-control input-disabled"
          name="name"
          value="<%= freelancer.userId.name %>"
          placeholder="Enter name"
          readonly
        />
      </div>
      <div class="form-group">
        <label for="inputEmail">Email</label>
        <input
          type="text"
          class="form-control input-disabled"
          name="email"
          value="<%= freelancer.userId.email %>"
          placeholder="Enter email"
          readonly
        />
      </div>
      <div class="form-group">
        <label for="inputAddress">Address</label>
        <input
          type="text"
          class="form-control input-disabled"
          name="address"
          value="<%= freelancer.userId.address %>"
          placeholder="Enter address"
          readonly
        />
      </div>
      <div class="form-group">
        <label for="inputPhone">Phone Number</label>
        <input
          type="number"
          class="form-control input-disabled"
          name="phone"
          value="<%= freelancer.userId.phone %>"
          placeholder="Enter phone"
          readonly
        />
      </div>
    </div>
    <div class="card-body">
      <h4>Service Profile</h4>
      <hr />
      <div class="form-group">
        <label for="inputTitle">Service Title</label>
        <input
          type="text"
          class="form-control input-disabled"
          name="title"
          value="<%= freelancer.title %>"
          placeholder="Enter title"
          readonly
        />
      </div>
      <div class="form-group">
        <label for="inputDescription">Description</label>
        <input
          type="text"
          class="form-control input-disabled"
          name="description"
          value="<%= freelancer.description %>"
          placeholder="Enter description"
          readonly
        />
      </div>
      <div class="form-group">
        <label for="inputCategory">Category</label>
        <select
          name="categoryId"
          id="category"
          class="form-control input-disabled"
        >
          <option value="<%= freelancer.categoryId.name %>">
            <%= freelancer.categoryId.name %>
          </option>
        </select>
      </div>
      <div class="form-group">
        <label for="inputRating">Rating</label>
        <input
          type="number"
          class="form-control input-disabled"
          name="rating"
          value="<%= freelancer.rating %>"
          placeholder="Enter rating"
          readonly
        />
      </div>
    </div>
    <div class="card-body">
      <h4>Bank Profile</h4>
      <hr>
      <div class="form-group">
        <label for="inputBankName">Bank Name</label>
        <input
          type="text"
          class="form-control input-disabled"
          name="bankName"
          value="<%= freelancer.bankName %>"
          placeholder="Enter Bank Name"
          readonly
        />
      </div>
      <div class="form-group">
        <label for="inputbankAccount">Bank Account</label>
        <input
          type="text"
          class="form-control input-disabled"
          name="bankAccount"
          value="<%= freelancer.bankAccount %>"
          placeholder="Enter bank Account"
          readonly
        />
      </div>
      <div class="form-group">
        <label for="inputAccountHolder">Bank Account Holder</label>
        <input
          type="text"
          class="form-control input-disabled"
          name="accountHolder"
          value="<%= freelancer.accountHolder %>"
          placeholder="Enter Bank Name"
          readonly
        />
      </div>
    </div>
  </div>
</div>
