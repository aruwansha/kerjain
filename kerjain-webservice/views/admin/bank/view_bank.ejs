<script>
  $("#dataTable").on("click", ".button-edit", function () {
    let id = $(this).data("id");
    let bankName = $(this).data("name");
    let bankAccount = $(this).data("account");
    let accountHolder = $(this).data("holder");
    $("#editModal").modal("show");
    $(".id").val(id);
    $(".bankName").val(bankName);
    $(".bankAccount").val(bankAccount);
    $(".accountHolder").val(accountHolder);
  });

  $("#dataTable").on("click", ".button-delete", function () {
    let id = $(this).data("id");
    console.log(id);
    $("#deleteModal").modal("show");
    $(".id").val(id);
  });
</script>
