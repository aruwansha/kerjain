<div class="card mt-2 mb-4">
  <div class="card-body">
    <form
      action="/freelancer/profile/<%= freelancer.userId.id %>/personal?_method=PUT"
      method="post"
      enctype="multipart/form-data"
    >
      <div class="form-group">
        <label for="inputName">Nama</label>
        <input
          type="text"
          class="form-control"
          name="name"
          value="<%= freelancer.userId.name %>"
        />
      </div>
      <div class="form-group">
        <label for="inputEmail">Email</label>
        <input
          type="text"
          class="form-control"
          name="email"
          value="<%= freelancer.userId.email %>"
        />
      </div>
      <div class="form-group">
        <label for="inputAddress">Alamat</label>
        <input
          type="text"
          class="form-control"
          name="address"
          value="<%= freelancer.userId.address %>"
        />
      </div>
      <div class="form-group">
        <label for="inputPhone">Nomer Telepon</label>
        <input
          type="number"
          class="form-control"
          name="phone"
          value="<%= freelancer.userId.phone %>"
        />
      </div>
      <div class="form-group">
        <label for="inputPhone">Foto Profil</label>
        <br />
        <img
          src="<%= process.env.URL %><%= freelancer.userId.imgUrl %>"
          onerror="this.onerror=null; this.src='<%= process.env.URL %>pp-default.svg'"
          alt=""
          width="200"
          height="200"
          class="img-fluid mb-2"
        />
        <input type="file" class="form-control-file mt-2" name="image" />
      </div>
      <hr />
      <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">Simpan</button>
      </div>
    </form>
  </div>
</div>
