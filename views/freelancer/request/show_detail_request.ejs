<style>
  .input-disabled {
    background-color: #ffffff !important;
  }
</style>

<!-- DataTales Example -->
<div class="card shadow mb-4 mt-2">
  <div class="card-header py-3"></div>
  <div class="card-body" id="card">
    <div class="row">
      <div class="col">
        <div class="form-group">
          <label for="inputName">Nama Penyewa</label>
          <input
            type="text"
            class="form-control input-disabled"
            name="name"
            value="<%= serviceUser.userId.name %>"
            readonly
          />
        </div>
        <div class="form-group">
          <label for="inputEmail">Email</label>
          <input
            type="text"
            class="form-control input-disabled"
            name="email"
            value="<%= serviceUser.userId.email %>"
            readonly
          />
        </div>
        <div class="form-group">
          <label for="inputPhone">No. HP</label>
          <input
            type="text"
            class="form-control input-disabled"
            name="phone"
            value="<%= serviceUser.userId.phone %>"
            readonly
          />
        </div>
        <div class="form-group">
          <label for="inputPhone">Subyek Pesanan</label>
          <input
            type="text"
            class="form-control input-disabled"
            name="phone"
            value="<%= request.requestSubject %>"
            readonly
          />
        </div>

        <div class="form-group">
          <label for="inputPhone">Deskripsi Pesanan</label>
          <input
            type="text"
            class="form-control input-disabled"
            name="phone"
            value="<%= request.requestDescription %>"
            readonly
          />
        </div>
        <div class="form-group">
          <label for="inputPhone">Budget Pesanan</label>
          <input
            type="text"
            class="form-control input-disabled"
            name="phone"
            value=" <%= Intl.NumberFormat('id-ID', {style: 'currency', currency:
            'IDR'}).format(request.requestBudget) %>"
            readonly
          />
        </div>
        <hr />
        <% if(requestBid){ %>
        <h5>Status Bid Saya</h5>
        <form action="/freelancer/request/bid?_method=PUT" method="POST">
          <div class="modal-body">
            <div class="form-group">
              <label for="inputServiceTitle">Nominal</label>
              <input
                type="number"
                class="form-control"
                name="nominal"
                placeholder=" <%= Intl.NumberFormat('id-ID', {style: 'currency', currency:
                  'IDR'}).format(requestBid.bid) %> "
              />
            </div>
            <div class="modal-footer">
              <input type="hidden" name="id" value="<%= requestBid._id %>" class="id" />
              <a href="/freelancer/request" class="btn btn-secondary mr-2"
                >Kembali</a
              >
              <button type="submit" class="btn btn-primary">Ubah</button>
            </div>
          </div>
        </form>
        <% } else { %>
        <div id="button" class="d-flex justify-content-end">
          <a href="/freelancer/request" class="btn btn-secondary mr-2">Kembali</a>
          <a
            type="button"
            href="javascript:void(0)"
            data-id="<%= request._id %>"
            class="btn btn-primary button-add"
          >
            Ikut
          </a>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
