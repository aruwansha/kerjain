<%- include('../../partials/header.ejs') %>
<!-- Page Wrapper -->
<div id="wrapper">
  <!-- Sidebar -->
  <%- include('../../partials/freelancer/sidebar.ejs') %>
  <!-- End of Sidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <!-- Topbar -->
      <%- include('../../partials/navbar.ejs') %>
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800">Profile</h1>
        <!-- End of Heading -->
        <%- include('../../partials/message.ejs') %>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item">
            <a
              class="nav-link active"
              id="personal-tab"
              data-toggle="tab"
              href="#personal"
              role="tab"
              aria-controls="home"
              aria-selected="true"
              >Data Pribadi</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link"
              id="service-tab"
              data-toggle="tab"
              href="#service"
              role="tab"
              aria-controls="home"
              aria-selected="true"
              >Data Jasa</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link"
              id="bank-tab"
              data-toggle="tab"
              href="#bank"
              role="tab"
              aria-controls="home"
              aria-selected="true"
              >Data Bank</a
            >
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <div
            class="tab-pane fade show active"
            id="personal"
            role="tabpanel"
            aria-labelledby="personal-tab"
          >
            <%- include('show_data_personal.ejs')%>
          </div>
          <div
            class="tab-pane fade"
            id="service"
            role="tabpanel"
            aria-labelledby="service-tab"
          >
            <%- include('show_data_service.ejs')%>
          </div>
          <div
            class="tab-pane fade"
            id="bank"
            role="tabpanel"
            aria-labelledby="bank-tab"
          >
            <%- include('show_data_bank.ejs')%>
          </div>
        </div>
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    <%- include('../../partials/footer.ejs') %>
    <!-- End of Footer -->
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>
<%- include('../../partials/js.ejs') %>
