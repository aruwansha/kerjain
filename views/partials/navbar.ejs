<!-- Modal -->
<div
  class="modal fade"
  id="changePasswordModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="modalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalLabel">Edit Password</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form
        action="/change-password?_method=PUT"
        method="POST"
      >
        <div class="modal-body">
          <div class="form-group">
            <label for="inputServiceTitle">Password Lama</label>
            <input
              type="password"
              class="form-control"
              name="old_password"
              placeholder="Masukkan password lama..."
              autocomplete="off"
              required
            />
          </div>
          <div class="form-group">
            <label for="inputServiceDescription">Password Baru</label>
            <input
              type="password"
              class="form-control"
              name="password1"
              placeholder="Masukkan password baru..."
              autocomplete="off"
              required
            />
          </div>
          <div class="form-group">
            <label for="inputAccountHolder">Ulangi Password Baru</label>
            <input
              type="password"
              class="form-control"
              name="password2"
              placeholder="Masukkan kembali password baru..."
              autocomplete="off"
              required
            />
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Batal
            </button>
            <button type="submit" class="btn btn-primary">Ubah</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
